[flake8]
ignore = E211, E999, F401, F821, W503
max-line-length = 120
max-doc-length = 88
max-complexity = 18
select = B,C,E,F,W,T4
per-file-ignores =
    __init__.py:F401
exclude =
    .git,
    __pycache__,
    setup.py,
    build,
    dist,
    site,
    releases,
    .venv,
    .tox,
    .mypy_cache,
    .pytest_cache,
    .vscode,
    .github,
    tests
